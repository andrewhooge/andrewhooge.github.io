---
pageable: true
per_page: 10
---


<head>
  <title>Endeavor to Persevere</title>
  <meta name="description" content="Andrew Hooge's Blog">
  <meta name="keywords" content="surf, paddle, surfboard shop, paddle boarding">
  <link rel="stylesheet" type="text/css" href="stylesheets/all.css">
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>

</head>

<body>

    <% if paginate && num_pages > 1 %>
      <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>

    <% page_articles.each_with_index do |article, i| %>
      <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
       <%= article.body %>
    <% end %>

    <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
    <% end %>
</body>
